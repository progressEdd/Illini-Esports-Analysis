#look at the data
str(usedcars)
summary(usedcars)
summary(usedcars$price)

summary(usedcars[ , c(2,3,5)]) # [row, column]
summary(usedcars[,2:4])


# categorical variables
table(usedcars $model)
table(usedcars [c("model","color")])
table(usedcars [c("model","price")]) # example for numeric variable
table(usedcars$model, usedcars$color) # same as line 12

# mean and median
mean(usedcars$price)
median(usedcars$price)

# aggregate
aggregate (usedcars$price, list(usedcars$model), mean) # aggregate by mean model, must use a list for model

# example of list (one=c(1), two=c(1,2), three=c(1,2,3))
list (one=c(1), two=c(1,2), three=c(1,2,3))

# practice aggregating median by color
aggregate(usedcars$price, list(usedcars$color), median)

# spread functions
price_range <- range(usedcars$price) # smallest, largest
diff(price_range)
quantile(usedcars$price)
sd(usedcars$price)
var(usedcars$price)
